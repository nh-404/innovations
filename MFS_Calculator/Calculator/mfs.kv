
<Bxly>:


    mfs_field : mfs_field

    orientation: 'vertical'

    Label:
        text: 'Enter your amount'
        font_size: 25
        color: 10, 128, 128, 4

    TextInput:

        id: mfs_field
        text: ''
        background_color : (10,50,55.10)
        height: 230
        size_hint: (1,None)
        readonly: False
        disable:False
        font_size: 64

    Label:
        text: 'Press on your desire MFS method'
        font_size: 25
        color: 10, 128, 128, 8


    GridLayout:

        columns:3
        rows:3
        padding: 17
        spacing: 17
        height: 400
        size_hint: (1,None)

        Button:
            text: 'Bkash USSD'
            color: 0,0,0,100
            background_color: (2, 28,67,100)
            font_size:20
            on_press: root.Result_BkashUssd()

        Button:
            text: 'Bkash App'
            color: 0,0,0,100
            background_color: (2, 85,67,100)
            font_size:20
            on_press: root.Result_BkashApp()

        Button:
            text: 'Bkash Fav Agent'
            font_size:20
            color: 0,0,0,100
            background_color: (2, 20,67,100)
            on_press: root.Result_BkashFav()

        Button:
            text: 'Nagad USSD'
            font_size:20
            color: 0,0,0,100
            background_color: (2, 28,67,100)
            on_press: root.Result_NagadUssd()

        Button:
            text: 'Nagad App'
            font_size:20
            color: 0,0,0,100
            background_color: (2, 28,67,100)
            on_press: root.Result_NagadApp()
  
        Button:
            text: 'Clear'
            font_size:20
            color: 0,0,0,100
            background_color: (100, 90,0,80)
            on_press: root.Clear()
