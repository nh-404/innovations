gridLayout:
<gridLayout>:
    cols:3
    rows:4

    ToggleButton:
        text:'off'
        on_state: root.toggle(self)
        size_hint: None,1
        width: '108dp'
        
    Button:
        text: 'Subhanallah'
        on_press: root.onClick()
        disabled: not root.count_en

    Label:
        text:root.labelView
        font_name:'rb.ttf'
        font_size: '80dp'
        color: 0,64,27,1




    ToggleButton:
        text:'off'
        on_state: root.toggle2(self)
        size_hint: None,1
        width: '108dp'

    Button:
        text: 'Alhumdulillah'
        on_press: root.onClick2()
        disabled: not root.count_en2

    Label:
        text:root.labelView2
        font_name:'rb.ttf'
        font_size: '80dp'
        color: 0,64,27,1





    ToggleButton:

        text:'off'
        on_state: root.toggle3(self)
        size_hint: None,1
        width: '108dp'

    Button:
        text: 'Allahu Akbar'
        on_press: root.onClick3()
        disabled: not root.count_en3

    Label:
        text:root.labelView3
        font_name:'rb.ttf'
        font_size: '80dp'
        color: 0,64,27,1


    Label:
